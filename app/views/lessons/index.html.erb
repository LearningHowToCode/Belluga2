<h1>Lessons</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Day</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Status</th>
      <th>Tutor</th>
      <th>Student</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @lessons.each do |lesson| %>
      <tr>
        <td><%= lesson.day %></td>
        <td><%= lesson.start_time %></td>
        <td><%= lesson.end_time %></td>
        <td><%= lesson.status %></td>
        <td><%= lesson.tutor_id %></td>
        <td><%= lesson.student_id %></td>
        <td><%= link_to 'Show', lesson, class: "btn btn-link" %></td>
        <td><%= link_to 'Edit', edit_lesson_path(lesson), class: "btn btn-link" %></td>
        <td><%= link_to 'Destroy', lesson, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add a New Lesson', new_lesson_path, class: "btn btn-link" %>
