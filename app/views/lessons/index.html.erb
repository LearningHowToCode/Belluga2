<h1>Lessons</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Day</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Status</th>
      <th>Tutor</th>
      <th>Student</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @lessons.each do |lesson| %>
      <tr>
        <td><%= lesson.day %></td>
        <td><%= lesson.start_time %></td>
        <td><%= lesson.end_time %></td>
        <td><%= lesson.status %></td>
        <td><%= lesson.tutor_id %></td>
        <td><%= lesson.student_id %></td>
        <td>
          <div class="btn-group">
            <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">Action<span class="caret"></span>
            </button>
            <ul class="dropdown-menu" role="menu">
                <li><%= link_to 'Show', lesson %></li>
                <li><%= link_to 'Edit', edit_lesson_path(lesson) %></li>
                <li><%= link_to 'Destroy', lesson, method: :delete, data: { confirm: 'Are you sure?' } %></li>
            </ul>
          </div>
        </td>    
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'Add a New Lesson', new_lesson_path, class: "btn btn-link" %>
<% end %>