<p id="notice"><%= notice %></p>

<p>
  <strong>Day:</strong>
  <%= @lesson.day %>
</p>

<p>
  <strong>Start time:</strong>
  <%= @lesson.start_time %>
</p>

<p>
  <strong>End time:</strong>
  <%= @lesson.end_time %>
</p>

<p>
  <strong>Status:</strong>
  <%= @lesson.status %>
</p>

<p>
  <strong>Tutor:</strong>
  <%= @lesson.tutor_id %>
</p>

<p>
  <strong>Student:</strong>
  <%= @lesson.student_id %>
