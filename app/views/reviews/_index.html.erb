<table class="table table-striped table-bordered rm-bottom">
  <thead>
  <tr>
    <th>Student</th>
    <th>Review</th>
    <th>Rating</th>
    <% if current_user.try(:admin?) %>
      <th>Action</th>
    <% end %>
  </tr>
  </thead>

  <tbody>
  <% reviews.each do |review| %>
    <tr>
      <td><%= review.lesson.student.name %></td>
      <td><%= review.review %></td>
      <td><div class="review-rating" data-score="<%= review.rating %>"></div></td>
      <% if current_user.try(:admin?) %>
        <td>
          <%= link_to 'Destroy', review, method: :delete, class: 'btn btn-danger',data: { confirm: 'Are you sure?' } %>
        </td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>

<script>
  $(".review-rating").raty({
    score: function() {
      return $(this).attr('data-score');
    },
    path: '/assets',
    readOnly: true});
</script>

