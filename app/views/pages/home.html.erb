<section class="full-width height-two-thirds home-banner">
  <div class="text-center">
  	<h1>Welcome to Pairbis!</h1>
  	<h4>We will help you find an Ivy-League tutor for Skype lessons.</h4>
    <%= link_to t('search_tutors'), tutors_path, class: "btn btn-primary btn-lg" %>
  </div>
</section>

<section class="flex bg-white">
    <div class="home-item">
      <div class='text-center'>
        <%= image_tag 'badge-ivy.png', width: "100", height: "100" %>
      </div>
      <h3 class="text-center">Ivy League Tutors</h3>
      <h5 class="text-center">You can choose from tutors from Harvard, Yale, and other top universities.</h5>
    </div>
    <div class="home-item">
      <div class='text-center'>
        <%= image_tag 'badge-pay.png', width: "100", height: "100" %>
      </div>
      <h3 class="text-center">Pay-per-Lesson</h3>
      <h5 class="text-center">You pay only for the lessons you take. You can start from just one lesson and see how it goes.</h5>
    </div>
    <div class="home-item">
      <div class='text-center'>
        <%= image_tag 'badge-schedule.png', width: "100", height: "100" %>
      </div>
      <h3 class="text-center">Flexible Schedule</h3>
      <h5 class="text-center">All lessons take place over Skype, so you can choose a convenient time and a location for you.</h5>
    </div>
</section>

<footer id="more" class="flex">
    <div class="text-center home-footer">
      <h2 class="text-center">About</h2>
      <h4>We are a group of Harvard students who want to make it easy for students from around the world to speak with tutors via Skype.</h4>
      <br>
      <%= image_tag 'about-us.png', width: "305", height: "305" %>
    </div>
    <div class="text-center bg-light-gray home-footer">
      <h2 class="text-center">Contact</h2>
      <h4 class="text-center">We will respond within 24 hours (often much faster)
        <br>
        <a href="mailto:pairbis@gmail.com">pairbis@gmail.com</a>
      </h4>
      <br>
      <%= image_tag 'contact.png', width: "305", height: "305" %>
    </div>
</footer>

