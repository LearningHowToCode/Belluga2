<!DOCTYPE html>
<html>
<head>
  <title>Pairbis</title>
  <%= stylesheet_link_tag    "application", 'vendor', media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", 'vendor', "data-turbolinks-track" => true %>
  <%= javascript_include_tag "https://js.stripe.com/v2/" %>
  <%= csrf_meta_tags %>
  <%= tag :meta, :name => "stripe-key", :content => ENV["STRIPE_PUBLIC_KEY"] %>
</head>
<body>
  <%= render 'layouts/facebook' %>

  <%= render 'layouts/header' %>
  <div class="content">
    <%= render 'layouts/alerts' %>
    <%= yield %>
  </div>
</body>
