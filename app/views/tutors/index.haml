%header.how-it-works-banner
  %h1.text-center= t :tutors
.center
  .center= will_paginate @tutors, renderer: BootstrapPagination::Rails
= render 'tutors/search'
%section.flex
  .bg-white.full-width.tutors
    - @tutors.to_a.uniq.each do |tutor|
      .tutor.flex
        .tutor-img
          = image_tag tutor.image, class: 'tutor-img'
        .tutor-info
          %h3
            = link_to tutor.name, tutor
          %ul.list-inline
            %li
              = tutor.undergraduate_institution
              = tutor.undergraduate_major
            %li
              = tutor.graduate_institution
              = tutor.graduate_study_field
          %h5
            - tutor.subjects.each do |subject|
              %span.label.label-info= subject.name
          %h5
            - tutor.languages.split(', ').each do |language|
              %span.label.label-success= language
          %p= tutor.bio
        .tutor-rate.flex.flex-center
          %div
            = number_to_currency tutor.price
        = tutor.rating ? tutor.rating.to_i : t(:not_rated)
.center
  .center
    = will_paginate @tutors, renderer: BootstrapPagination::Rails
