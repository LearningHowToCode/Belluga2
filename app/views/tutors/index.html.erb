<header class="how-it-works-banner">
  <h1 class="text-center">TUTORS</h1>
</header>
<section class="flex justify-content bg-gray how-it-works">
  <div>
    <table class='table'>
      <thead>
        <tr>
          <th></th>
          <th>Name</th>
          <th>College</th>
          <th>Major</th>
          <th>Graduate School</th>
          <th>Field of Study</th>
          <th>Price (USD)</th>
          <th>Profile</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @tutors.each do |tutor| %>
          <tr>
            <td><%= image_tag tutor.image, width: '30' %></td>
            <td><%= link_to tutor.name, tutor %></td>
            <td><%= tutor.undergraduate_institution %></td>
            <td><%= tutor.undergraduate_major %></td>
            <td><%= tutor.graduate_institution %></td>
            <td><%= tutor.graduate_study_field %></td>
            <td><%= number_to_currency tutor.price %></td>
            <td><%= tutor.bio %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>

