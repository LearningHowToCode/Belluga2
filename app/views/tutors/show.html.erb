<p id="notice"><%= notice %></p>

<h1>
  <%= @tutor.name %>
</h1>

<p>
  <%= image_tag @tutor.image, width: 100 %>
</p>
<p>
  <strong>Format:</strong>
  <%= @tutor.format %>
</p>

<p>
  <strong>University:</strong>
  <%= @tutor.university %>
</p>

<p>
  <strong>Price:</strong>
  <%= number_to_currency @tutor.price %>
</p>

<p>
  <strong>Profile:</strong>
  <%= @tutor.bio %>
</p>

<% if current_user == @tutor.user %>
  <%= link_to 'Edit', edit_tutor_path(@tutor), class: "btn btn-link" %>
<% end %>

<div>
  <h1 class='pull-left'>
    Lessons
  </h1>

</div>
<%= render 'lessons/lessons_list' %>

<% if current_user.profile == @tutor %>
  <%= link_to 'New Lesson', new_lesson_path, class: 'btn btn-primary pull-right' %>
<% end  %>