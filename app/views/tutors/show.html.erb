<section>
  <div class="row">
    <% unless @tutor.is_the?(current_user) %>
      <div class="col-md-8">
        <header class="bg-green flex reg-header">
          <div class="media full-width tutor-header">
            <div class="pull-left">
              <%= image_tag @tutor.image, class: 'tutor-img' %>
            </div>
            <div class="media-body">
              <h2 class="half-top">
                <%= @tutor.name %>
              </h2>
              <div class="tutor-star-rating"></div>
              <ul class="list-inline">
                <li><%= @tutor.undergraduate_institution %> <%= @tutor.undergraduate_major %></li>
                <li><%= @tutor.graduate_institution %> <%= @tutor.graduate_study_field %></li>
              </ul>
              <% @tutor.subjects.each do |subject| %>
                <%- next if subject.name == 'Other' %>
                <span class="label label-info"><%= subject.name %></span>
              <% end %>
              <h5>
                <% @tutor.languages.split(', ').each do |language| %>
                  <span class="label label-success"><%= language %></span>
                <% end %>
              </h5>
              <h5><%=t :hourly_price %> <%= number_to_currency @tutor.price %> <%=t :hourly_price2 %></h5>
              <h5>Profile last updated in <%= @tutor.updated_at.strftime('%B %Y') %></h5>
            </div>
          </div>
        </header>
        <section class="flex sm">
          <div class="bg-white full-width content-pad">
            <div id="notice"><%= notice %></div>
            <p class="lead rm-bottom">
              <%= @tutor.long_bio %>
            </p>
          </div>
        </section>
      </div>
      <div class="col-md-3 bg-white">
        <br>
        <h3><%=t :message %> <%= @tutor.name %> <%=t :message2 %></h3>
        <h5><%=t :send_message_directly_to %> <%= @tutor.name %> <%=t :or_contact_pairbis_customer_support %></h5>
        <%= render 'messages/contact_form' %>
        <br>
      </div>
      <div class="col-md-1"></div>
    <% end %>

    <% if @tutor.is_the?(current_user) %>
      <div class="col-md-12">
        <header class="bg-green flex reg-header">
          <div class="media full-width tutor-header">
            <div class="pull-left">
              <%= image_tag @tutor.image, class: 'tutor-img' %>
            </div>
            <div class="pull-right">
              <%= link_to edit_tutor_path(@tutor), class: 'btn btn-primary' do %>
                Edit profile
              <% end %>
            </div>
            <div class="media-body">
              <h2 class="half-top">
                <%= @tutor.name %>
              </h2>
              <div class="tutor-star-rating"></div>
              <ul class="list-inline">
                <li><%= @tutor.undergraduate_institution %> <%= @tutor.undergraduate_major %></li>
                <li><%= @tutor.graduate_institution %> <%= @tutor.graduate_study_field %></li>
              </ul>
              <% @tutor.subjects.each do |subject| %>
                <%- next if subject.name == 'Other' %>
                <span class="label label-info"><%= subject.name %></span>
              <% end %>
              <h5>
                <% @tutor.languages.split(', ').each do |language| %>
                  <span class="label label-success"><%= language %></span>
                <% end %>
              </h5>
              <h5><%=t :hourly_price %> <%= number_to_currency @tutor.price %> <%=t :hourly_price2 %></h5>
              <h5>Profile last updated in <%= @tutor.updated_at.strftime('%B %Y') %></h5>
            </div>
          </div>
        </header>
        <section class="flex sm">
          <div class="bg-white full-width content-pad">
            <div id="notice"><%= notice %></div>
            <p class="lead rm-bottom">
              <%= @tutor.long_bio %>
            </p>
          </div>
        </section>
      </div>
    <% end %>
  </div>
</section>

