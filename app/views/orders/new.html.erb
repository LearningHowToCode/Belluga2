<section class="md">
	<h1 class="text-center">Lesson Details</h1>
	<br>
	<div class="bg-white full-width content-pad">
		<div class="row">
			<div class="col-md-6">
				<h3 class="rm-top">Your Payment Information</h3>
				<br>
				<%= render 'form' %>
			</div>
			<div class="col-md-3 col-md-offset-1">
				<h5><strong>Tutor: </strong></h5>
				<p class="lead"><%= @lesson.tutor.name %></p>
				<h5><strong>Lesson Day (US Eastern Time): </strong></h5>
				<p class="lead"><%= @lesson.day %></p>
				<h5><strong>Lesson Time (US Eastern Time): </strong></h5>
				<p class="lead"><%= format_time @lesson.start_time %></p>
			</div>
			<div class="col-md-2">
				<h5><strong>Lesson Duration: </strong></h5>
				<p class="lead"><%= "#{@lesson.duration} Minutes" %></p>
				<h5><strong>Price: </strong></h5>
				<p class="lead"><%= number_to_currency @lesson.price %></p>
			</div>
		</div>
	</div>
</section>