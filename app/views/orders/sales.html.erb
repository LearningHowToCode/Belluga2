<div class="center">
  <h2>My Schedule</h2>
</div>

<table class="table table-striped table-bordered">
 <thead>
  <tr>
    <th>Day</th>
    <th>Start time</th>
    <th>End time</th>
    <th>Status</th>
    <th>Student</th>
  </tr>
  </thead>

  <tbody>
  <% @orders.each do |order| %>
    <tr>
      <td><%= order.lesson.day %></td>
      <td><%= order.lesson.start_time %></td>
      <td><%= order.lesson.duration %></td>
      <td><%= order.lesson.status %></td>
      <td><%= order.lesson.student.try(:name) %></td>
    </tr>
  <% end %>
  </tbody>
</table>

