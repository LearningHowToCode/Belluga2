<header class="how-it-works-banner">
  <h1 class="text-center">My Schedule</h1>
</header>

<section class="flex">
  <div class="bg-white full-width content-pad">
    <table class="table table-striped table-bordered">
     <thead>
      <tr>
        <th>Day</th>
        <th>Start time</th>
        <th>End time</th>
        <th>Status</th>
        <th>Student</th>
      </tr>
      </thead>

      <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.lesson.day %></td>
          <td><%= order.lesson.start_time %></td>
          <td><%= order.lesson.duration %></td>
          <td><%= order.lesson.status %></td>
          <td><%= order.lesson.student.try(:name) %></td>
        </tr>
      <% end %>
      </tbody>
    </table>

    <h5>*If you would like to cancel a lesson after your student has made a reservation, please email:
      <a href="mailto:pairbis@gmail.com">pairbis@gmail.com</a> ASAP.</h5>
    <h5>*The cancellation policy is that you should cancel at least 72 hours prior to
      the lesson start time. If you cancel after that, we will discount your commission
      by 50% for the next lesson.</h5>
  </div>
</section>