<%= form_for(@student) do |f| %>
  <% if @student.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@student.errors.count, "error") %> prohibited this student from being saved:</h2>

      <ul>
      <% @student.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :country %><br>
    <%= country_select "student", "country",
                       { priority_countries: ['US', 'CN', 'JP', 'KR', 'TW'] },
                       { class: "form-control" } %>
  </div>
  <div class="form-group">
    <%= f.label :skype_id, 'Skype ID' %><br>
    <%= f.text_field :skype_id, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :gmail_address %><br>
    <%= f.email_field :gmail_address, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :preference %><br>
    <%= f.select :preference, ['Skype', 'Google Hangouts'], class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit "Update My Profile", class: "btn btn-primary" %>
  </div>

<% end %>
